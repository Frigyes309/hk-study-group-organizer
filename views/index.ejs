<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Title</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/hammerjs@2.0.8"></script>
  <script src="https://cdn.jsdelivr.net/npm/chartjs-plugin-zoom@1.1.1/dist/chartjs-plugin-zoom.min.js"></script>
</head>
  <body>
    <h1 class="text-center text-white">Student group organizer</h1>
    <div>
      <canvas id="myChart"></canvas>
    </div>
    <script>

      fetch('/api/data').then(response => response.json()).then(data => {
        window.data = data;

        const chartData = {
          datasets: [{
            label: 'Scatter Dataset',
            data: data.map(student => { return {x: student.x ? student.x : 0, y: student.y ? student.y : 0}}),
            pointBackgroundColor: function(context) {
              return data[context.dataIndex].color;
            }
          }],
        };
        const config = {
          type: 'scatter',
          data: chartData,
          options: {
            plugins: {
              tooltip: {
                callbacks: {
                  label: function(context) {
                    //debugger;
                    //return window.data[context.dataIndex];
                    return [window.data[context.dataIndex].name, `Room: ${context.parsed.x} - Gtb: ${context.parsed.y}`]
                  }
                }
              }
            },
            scales: {
              x: {
                type: 'linear',
                position: 'bottom',
                min: 800,
                max: 818,
              },
              y: {
                min: 10,
                max: 19
              }
            }
          }
        };
        const ctx = document.getElementById('myChart').getContext('2d');
        const myChart = new Chart(ctx, config);
      })
    </script>
  </body>
</html>